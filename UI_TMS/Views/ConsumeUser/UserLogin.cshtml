<link rel="stylesheet" href="~/css/UserLogin.css"/>
<div class="login-box">
    <h2>Login</h2>
    <form method="post">
        <div class="user-box">
            <input type="text" name="txtuser" required="">
            <label>Username</label>
        </div>
        <div class="user-box">
            <input type="password" name="txtpass" required="">
            <label>Password</label>
        </div>
        <input type="submit" value="Log in" style="background-color: #04AA6D; color: white; padding: 14px 20px; margin: 8px 0; border: none; cursor: pointer; width: 100%;" />
        @Html.ActionLink("Register User", "AddUser")
        @Html.ValidationSummary(true)
    </form>
</div>