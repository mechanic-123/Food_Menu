<link rel="stylesheet" href="~/css/style.css" />
@model TMS_CRS.Models.TmRegdetail
<form method="post">
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <th>Old Owner ID</th>
            <td>@Html.EditorFor(x => x.OldOwnerId, new {  htmlAttributes = new { disabled = true, placeholder = Model.OwnerId,value=Model.OwnerId } })</td>
        </tr>
        <tr>
            <th>New Owner ID</th>
            <td>@Html.EditorFor(x => x.OwnerId)</td>
        </tr>
        <tr>
            <th>Old Owner</th>
            <td>@Html.EditorFor(x => x.OldOwner.OwnerId, new { @readonly = true })</td>
        </tr>
        <tr>
            <th>Owner</th>
            <td>@Html.TextBoxFor(x => x.Owner.Fname)</td>
        </tr>
        <tr>
            <th colspan="2" style="text-align:center">@Html.TextBox("sub_button", "Submit", new { type = "submit", style = "background-color:#00beff;height: 50px; width: 100px;" })</th>
        </tr>
    </table>
    <div>
        <input type="button" value="Back"
               style="height: 50px; width: 100px; background-color: #00beff;"
               onclick="location.href='@Url.Action("GetAll", "ConsumeRTO")'" />
    </div>
</form>