<link rel="stylesheet" href="~/css/style.css" />
<body style="background-color:antiquewhite">
@model TMS_CRS.Models.TmVehicledetail;
    <form method="post">
        <marquee><h2 style="color:maroon">Welcome to Vehicle Registration Page</h2></marquee>
        @Html.ValidationSummary(true)
        <table style="margin-left:auto;margin-right:auto;margin-top:3%">
            <tr>
                <th>Vehicle Type</th>
                <td>@Html.TextBoxFor(x => x.VehType)</td>
                <td><em>@Html.ValidationMessageFor(x => x.VehType)</em></td>
            </tr>
            <tr>
                <th>Engine Number</th>
                <td>@Html.TextBoxFor(x => x.EngineNo)</td>
                <td><em>@Html.ValidationMessageFor(x => x.EngineNo)</em></td>
            </tr>
            <tr>
                <th>Model Number</th>
                <td>@Html.TextBoxFor(x => x.ModelNo)</td>
                <td><em>@Html.ValidationMessageFor(x => x.ModelNo)</em></td>
            </tr>
            <tr>
                <th>Vehicle Name</th>
                <td>@Html.TextBoxFor(x => x.VehName)</td>
                <td><em>@Html.ValidationMessageFor(x => x.VehName)</em></td>
            </tr>
            <tr>
                <th>Vehicle Color</th>
                <td>@Html.TextBoxFor(x => x.VehColor)</td>
                <td><em>@Html.ValidationMessageFor(x => x.VehColor)</em></td>
            </tr>
            <tr>
                <th>Manufacturer Name</th>
                <td>@Html.TextBoxFor(x => x.ManufacturerName)</td>
                <td><em>@Html.ValidationMessageFor(x => x.ManufacturerName)</em></td>
            </tr>
            <tr>
                <th>Date of Manufucturing</th>
                <td>@Html.TextBoxFor(x => x.DateOfManufacture, new { type = "date" })</td>
                <td><em>@Html.ValidationMessageFor(x => x.DateOfManufacture)</em></td>
            </tr>
            <tr>
                <th>Number of Cylinders</th>
                <td>@Html.EditorFor(x => x.NoOfCyclinders)</td>
                <td><em>@Html.ValidationMessageFor(x => x.NoOfCyclinders)</em></td>
            </tr>
            <tr>
                <th>Cubic Capacity</th>
                <td>@Html.EditorFor(x => x.CuibicCapacity)</td>
                <td><em>@Html.ValidationMessageFor(x => x.CuibicCapacity)</em></td>
            </tr>
            <tr>
                <th>Fuel Used</th>
                <td>@Html.TextBoxFor(x => x.FuelUsed)</td>
                <td><em>@Html.ValidationMessageFor(x => x.FuelUsed)</em></td>
            </tr>
            <tr>
                <th colspan="2" style="text-align:center">@Html.TextBox("sub_button", "Submit", new { type = "submit", style = "background-color:#00beff;height: 50px; width: 100px;" })</th>
            </tr>
        </table>
        <div>
            <input type="button" value="Back"
                   style="height: 50px; width: 100px; background-color: #00beff;"
                   onclick="location.href='@Url.Action("RTOHome", "ConsumeRTO")'" />
        </div>
    </form>
</body>