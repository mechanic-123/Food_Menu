<link rel="stylesheet" href="~/css/style.css" />
<body style="background-color:antiquewhite;text-align:center;">
@model TMS_CRS.Models.TmRegdetail;
    <form method="post">
        @Html.ValidationSummary(true)
        <marquee><h1 style="color:red">Welcome to the  Vehicle Registration Page</h1></marquee>
        <table style="margin-left:auto;margin-right:auto;">
            <tr>
                <th><b>Application Number</b></th>
                <td>@Html.EditorFor(x => x.AppNo)</td>
                <td><em>@Html.ValidationMessageFor(x => x.AppNo)</em></td>
            </tr>
            <tr>
                <th><b>Vehicle Number</b></th>
                <td width: 550px;>@Html.TextBoxFor(x => x.VehNo)</td>
                <td><em>@Html.ValidationMessageFor(x => x.VehNo)</em></td>
            </tr>
            <tr>
                <th><b>Vehicle ID</b></th>
                <td>@Html.TextBoxFor(x => x.VehId)</td>
                <td><em>@Html.ValidationMessageFor(x => x.VehId)</em></td>
            </tr>
            <tr>
                <th><b>Owner ID</b></th>
                <td>@Html.TextBoxFor(x => x.OwnerId)</td>
                <td><em>@Html.ValidationMessageFor(x => x.OwnerId)</em></td>
            </tr>
            <tr>
                <th><b>Date of Purchase</b></th>
                <td>@Html.TextBoxFor(x => x.DateOfPurchase, new { type = "date" })</td>
                <td><em>@Html.ValidationMessageFor(x => x.DateOfPurchase)</em></td>
            </tr>
            <tr>
                <th><b>Distributer Name</b></th>
                <td>@Html.TextBoxFor(x => x.DistrubuterName)</td>
                <td><em>@Html.ValidationMessageFor(x => x.DistrubuterName)</em></td>
            </tr>
            
            <tr>
                <th colspan="2" style="text-align:center">@Html.TextBox("sub_button", "Submit", new { type = "submit", style = "background-color:#00beff;height: 50px; width: 100px;" })</th>
            </tr>
        </table>
        <br />
        <div>
            <input type="button" value="Back"
                   style="height: 50px; width: 100px; background-color: #00beff;"
                   onclick="location.href='@Url.Action("RTOHome", "ConsumeRTO")'" />
        </div>

    </form>
</body>